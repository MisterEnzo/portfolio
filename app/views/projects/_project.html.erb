<div class="col-sm-4 project" data-id="<%= project.id %>">
  <div class="">
    <%= link_to (project.link ? project.link : "") do %>
      <div class="project-image">
        <%= image_tag portfolio_image(project.thumb_image.url, "thumb"), width: '100%' %>
      </div>
      <p class="">
        <span><%= link_to project.title, project_show_path(project) %></span>
        <%= project.subtitle %>
      </p>
    <% end %>
    <%= link_to 'Edit', edit_project_path(project) if logged_in?(:site_admin) %>
    <%= link_to 'Delete', project, method: :delete, data: { confirm: 'Are you sure?'} if logged_in?(:site_admin) %>
  </div>
</div>
