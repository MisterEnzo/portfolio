<div class="col-sm-8 offset-sm-2 project" data-id="<%= project.id %>">
  <div class="">
    <%= link_to (project.link ? project.link : "") do %>
      <h4><%= project.title %></h4>
      <div>
        <%= image_tag portfolio_image(project.thumb_image.url, "thumb"), width: '100%', class: "project-image" %>
      </div>
      <p class="">
        <%= project.body %>
      </p>
    <% end %>
    <%= link_to 'Edit', edit_project_path(project) if logged_in?(:site_admin) %>
    <%= link_to 'Delete', project, method: :delete, data: { confirm: 'Are you sure?'} if logged_in?(:site_admin) %>
  </div>
</div>
