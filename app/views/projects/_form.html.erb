<div class="container col-sm-6" >
  <%= form_for(@project) do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :subtitle %>
      <%= f.text_field :subtitle, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_field :body, class: "form-control" %>
    </div>
    <%= f.submit %>
  <% end %>
</div>
